#!/usr/bin/env bash

# fail fast
set -eo pipefail

BP_DIR="${1:?}"
GO_VERSION="1.12.9"

go_url() {
  local platform='unknown'
  local unamestr=`uname`
  if [[ "$unamestr" == 'Linux' ]]; then
    platform='linux'
  elif [[ "$unamestr" == 'Darwin' ]]; then
    platform='darwin'
  fi

  echo "https://dl.google.com/go/go${GO_VERSION}.${platform}-amd64.tar.gz"
}

install_go() {
  local go_dir="${1:?}"
  local go_tgz="$(mktemp /tmp/go.tgz.XXXXXX)"
  curl --retry 3 -sf -o "$go_tgz" -L $(go_url)
  tar -C "$go_dir" -xzf "$go_tgz"
}

build_cmd() {
  local cmd=${1:?}

  echo -n "---> Building bin/${cmd}... "
  go build -o "bin/${cmd}" ./cmd/${cmd}/...
  chmod +x "bin/${cmd}"
  echo "ok"
}

go_dir="$(mktemp -d)" # TODO put it in the cache
install_go "$go_dir"

export PATH="$PATH:${go_dir}/go/bin"

cd "$BP_DIR"
build_cmd "detector"
build_cmd "builder"

echo "---> Built buildpack into ${BP_DIR}"
